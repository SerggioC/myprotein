<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/details_activity_layout"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:checked="true"
        android:hint="Notifies every price drop"
        android:text="Notifications"
        android:textOff="OFF"
        android:textOn="ON"
        android:textSize="14sp"/>


    <RadioGroup
        android:id="@+id/radioGroup_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/radioButton_every"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="Notify every price drop"/>

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/radioButton_target"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notification price target"/>
    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_alert1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Set target price: "
            android:textSize="14sp"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tv_alert_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>
