<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_rl_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_news"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="News icon"
        android:src="@drawable/ic_news_blue"/>

    <TextView
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView1_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Latest News and Offers"
        android:layout_toRightOf="@id/image_news"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp"/>

    <TextView
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/swipe_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1_news"
        android:layout_toRightOf="@id/image_news"
        android:text="Swipe down to update"
        android:textAlignment="center"/>

</RelativeLayout>