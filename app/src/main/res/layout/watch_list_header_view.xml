<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/watching_ll_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">

    <ImageView
        android:id="@+id/ic_blue_eye"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="View icon"
        android:src="@mipmap/ic_blue_eye"/>

    <ImageView
        android:id="@+id/ic_global_notifications"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="2dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:contentDescription="Global Notifications icon"
        android:src="@drawable/ic_notifications_active"/>

    <TextView
        android:id="@+id/watching_txtv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/ic_blue_eye"
        android:layout_toLeftOf="@id/ic_global_notifications"
        android:gravity="center"
        android:text="Swipe down to update"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDarker"
        android:textSize="16sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/watching_txtv1"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/ic_blue_eye"
        android:layout_toLeftOf="@id/ic_global_notifications"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/updateclock"
            android:contentDescription="Last Full Update Icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Last Full Update:"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/updated_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Never"
            android:textColor="@color/dark_green"
            android:textSize="14sp"/>

    </LinearLayout>

</RelativeLayout>