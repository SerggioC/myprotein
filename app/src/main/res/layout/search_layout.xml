<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_collapseMode="parallax"
    android:id="@+id/relative_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <Button
                android:id="@+id/btn_search"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginLeft="12dp"
                android:background="@android:drawable/ic_menu_search"/>

            <EditText
                android:id="@+id/searchTextView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittextsize"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="@dimen/inner_fragment_margin"
                android:layout_marginRight="@dimen/inner_fragment_margin"
                android:layout_marginTop="@dimen/inner_fragment_margin"
                android:background="@drawable/edittextstyle"
                android:hint="@string/lets_find_a_deal"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:text="Impact Whey Protein 5kg"
                android:textAlignment="center"
                tools:ignore="RtlHardcoded"/>

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="12dp"
                android:background="@android:drawable/ic_menu_close_clear_cancel"/>
        </FrameLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        >
    </ListView>
